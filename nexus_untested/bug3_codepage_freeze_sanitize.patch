+// Defensive sanitization for text coming from network/quests/db.
+// Prevents rare client hard-freezes caused by invalid byte sequences for the active code page.
+static void SanitizeTextForRender(char* s)
+{
+	if (!s) return;
+	for (unsigned char* p = (unsigned char*)s; *p; ++p)
+	{
+		const unsigned char c = *p;
+		// Replace control characters (except \t, \n, \r) with spaces.
+		if ((c < 0x20 && c != '\t' && c != '\n' && c != '\r') || c == 0x7F)
+			*p = ' ';
+	}
+}
