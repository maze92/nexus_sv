+#ifdef _WIN32
+	const UINT cp = GetACP();
+	if (in.empty())
+		return in;
+
+	int wlen = MultiByteToWideChar(cp, MB_ERR_INVALID_CHARS, in.c_str(), (int)in.size(), NULL, 0);
+	if (wlen > 0)
+		return in;
+
+	std::string out;
+	out.reserve(in.size());
+	for (size_t i = 0; i < in.size(); ++i)
+	{
+		out.push_back(in[i]);
+		int test = MultiByteToWideChar(cp, MB_ERR_INVALID_CHARS, out.c_str(), (int)out.size(), NULL, 0);
+		if (test <= 0)
+			out.back() = ' ';
+	}
+	return out;
+#else
+	std::string out = in;
+	for (size_t i = 0; i < out.size(); ++i)
+	{
+		unsigned char c = (unsigned char)out[i];
+		if ((c < 0x20 && c != '\t' && c != '\n' && c != '\r') || c == 0x7F)
+			out[i] = ' ';
+	}
+	return out;
+#endif
+}
