+// Safe string helpers (prevents fixed-buffer overflows from malformed locale.cfg values)
+static void SafeStrCopy(char* dst, size_t dstSize, const char* src)
+{
+	if (!dst || dstSize == 0)
+		return;
+	if (!src)
+	{
+		dst[0] = '\0';
+		return;
+	}
+#if defined(_MSC_VER)
+	strncpy_s(dst, dstSize, src, _TRUNCATE);
+#else
+	strncpy(dst, src, dstSize - 1);
+	dst[dstSize - 1] = '\0';
+#endif
+}
+
+static int SafeSnprintf(char* dst, size_t dstSize, const char* fmt, ...)
+{
+	if (!dst || dstSize == 0 || !fmt)
+		return 0;
+	va_list args;
+	va_start(args, fmt);
+#if defined(_MSC_VER)
+	int r = _vsnprintf_s(dst, dstSize, _TRUNCATE, fmt, args);
+#else
+	int r = vsnprintf(dst, dstSize, fmt, args);
+	if (r < 0 || (size_t)r >= dstSize)
+		dst[dstSize - 1] = '\0';
+#endif
+	va_end(args);
+	return r;
+}
